        function isInViewport(element) {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        }

        function checkImagesInViewport() {
            const images = document.querySelectorAll('.img-scale');
            images.forEach(img => {
                if (isInViewport(img)) {
                    img.classList.add('in-viewport');
                } else {
                    img.classList.remove('in-viewport');
                }
            });
        }
        document.addEventListener('scroll', checkImagesInViewport);
        document.addEventListener('DOMContentLoaded', checkImagesInViewport);
    </script>
 }
