@using EpicockX.Models
@model Product


<link rel="stylesheet" href="~/css/Details.css" />
<style>
    .custom-card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
    }

        .custom-card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .carousel-img {
        height: 400px;
        width: 100%;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #000;
        border-radius: 50%;
    }

    .card-body {
        padding: 20px;
    }

    .list-group-item {
  border: 0;
  margin:10px;
        background-color:black;
        color
        :white;
    }

    .btnDetails {
        background-color: #BF9A5C;
        color: black;
    }

    .main {
        background-image: url(../assets/images/banner/SfondoIndex.jpg);
    }
  
</style>

<div class="container main">
    <div class="card custom-card w-50 mx-auto my-10 border-0">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.ProductImages.Count; i++)
                {
                    <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.ProductImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Model.ProductImages[i]" class="d-block w-100 carousel-img" alt="Product Image @(i + 1)">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="card-body text-center bg-dark text-white p-4">
            <h5 class="card-title fs-4">@Model.ProductName</h5>
            <p class="card-text">@Model.ProductDescription</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item border-0">Categoria: @Model.ProductCategory</li>
                <li class="list-group-item border-0">Marca: @Model.ProductBrand</li>
                <li class="list-group-item border-0">
                    Quantità:
                        <input id="quantityInput" type="number" class="form-control" value="1" min="1" max="10">
                </li>
                <li class="list-group-item border-0">Prezzo: @Model.ProductPrice.ToString("C")</li>
            </ul>
            <button id="addToCartBtn" data-id="@Model.ProductId" class="btn btn-primary mt-2">Aggiungi al carrello</button>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let addToCartBtn = document.getElementById('addToCartBtn');
            addToCartBtn.addEventListener('click', function (e) {
                e.preventDefault();

                let idProdotto = $(this).data('id'); 
                let quantity = $('#quantityInput').val();
                let url = '@Url.Action("AddToCart", "Cart")';
                console.log(url + '?id=' + idProdotto + '&quantity=' + quantity + '&returnUrl=' + '@Context.Request.Path');
                window.location.href = url + '?id=' + idProdotto + '&quantity=' + quantity + '&returnUrl=' + '@Context.Request.Path';
            }); 
        });
    </script>
}
