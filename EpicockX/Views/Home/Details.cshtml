@using EpicockX.Models
@model Product

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="~/css/Details.css" />
<style>
    .custom-card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
    }

        .custom-card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .carousel-img {
        height: 400px;
        width: 100%;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #000;
        border-radius: 50%;
    }

    .card-body {
        padding: 20px;
    }

    .list-group-item {
  border: 0;
  margin:10px;
        background-color:black;
        color
        :white;
    }

    .btnDetails {
        background-color: #BF9A5C;
        color: black;
    }

    .main {
        background-image: url(../assets/images/banner/SfondoIndex.jpg);
    }
  
</style>

<div class="main">
<div class="card custom-card w-50 mx-auto my-10">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < ViewBag.Images.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < ViewBag.Images.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@ViewBag.Images[i].ProductImageUrl" class="d-block w-100 carousel-img" alt="Product Image @(i + 1)">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="card-body text-center bg-dark text-white">
        <h5 class="card-title text-lg">@Model.ProductName</h5>
        <p class="card-text">@Model.ProductDescription</p>
        <div class="list-group">
            <div class="grid grid-cols-2">
                <p class="list-group-item ">Categoria: @Model.ProductCategory</p>
                <p class="list-group-item">Marca: @Model.ProductBrand</p>
            <p class="list-group-item">Quantità: @Model.ProductQuantity</p>
            <p class="list-group-item">Prezzo: @Model.ProductPrice.ToString("C")</p>
            </div>

                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.ProductId" asp-route-returnUrl="@Context.Request.Path" class="btn btnDetails mt-2">Aggiungi al carrello</a>


        </div>
    </div>
</div>
</div>

@section Scripts {
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
}
