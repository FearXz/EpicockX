<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EpicockX</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/mybootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EpicockX.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>


    <header class="bg-white">
        <nav class="container d-flex align-items-center justify-content-between py-3 px-3 px-lg-5 MainColor" aria-label="Global">
            <div class="d-flex flex-lg-fill">
                <a href="#" class="p-2">
                    <span class="sr-only">Your Company</span>
                    <img class="h-12 w-auto" src="./assets/images/logo.jpg.jpg" alt="">
                </a>
            </div>
            <div class="d-flex gap-3 gap-lg-4">
                <a asp-action="Index" class="text-white fw-semibold">Homepage</a>
                <a asp-controller="Home" asp-action="Catalog" class="text-white fw-semibold">Catalogo</a>
                <a asp-controller="BackOffice" asp-action="Index" class="text-white fw-semibold">Admin</a>
                <a asp-controller="" asp-action="Cart" class="text-white fw-semibold">Cart</a>
            </div>
            <div class="d-lg-flex flex-lg-fill justify-content-lg-end">
                <a href="#" class="text-white fw-semibold">
                    <i class="fas fa-shopping-cart"></i>
                </a>
            </div>
        </nav>
    </header>



    <!-- Modale del carrello -->
    <div id="cartModal" class="fixed inset-0 flex items-center justify-end z-50 hidden">
        <div class="absolute inset-0 bg-gray-800 opacity-50"></div>
        <div class="relative bg-white w-1/3 h-full shadow-lg">
            <div class="p-4 border-b flex items-center justify-between bg-blue-600" id="colCartNav">
                <div class="flex items-center gap-2">
                    <h2 class="text-xl font-semibold text-white">IL TUO CARRELLO</h2>
                    <i class="fa-solid fa-credit-card ms-5 text-white" title="Pagamento con carta di credito"></i>
                    <i class="fa-solid fa-location-dot ms-5 text-white" title="Spedizione a domicilio"></i>
                    <i class="fa-solid fa-lock ms-5 text-white" title="Connessione sicura"></i>
                </div>
                <button id="closeCart" class="text-gray-600 hover:text-gray-900">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="p-4 flex flex-col-reverse" id="colCartFot">
                <!-- Contenuto del carrello -->
                <p class="text-center p-3 text-white">Prodotti selezionati da acquistare</p>
                <ul class="divide-y divide-gray-300">
                    <li class="py-2">
                        <div class="flex justify-between items-center">
                            <div class="flex items-center gap-2">
                                <img src="https://via.placeholder.com/40" alt="Product Image" class="h-10 w-10">
                                <div>
                                    <p class="font-semibold text-gray-300">Nome Prodotto</p>
                                    <p class="text-gray-400">Quantità: 1</p>
                                </div>
                            </div>
                            <p class="font-semibold">€ 10.00</p>
                        </div>
                    </li>
                    <!-- Aggiungi altri articoli qui -->
                </ul>
                <div class="flex justify-between items-center mt-4">
                    <p><span class="text-white">Totale:</span> <span class="text-white">€ 10.00</span></p>
                    <button class="w-50 text-white p-2 bg-green-500 hover:bg-green-600 rounded-md">Procedi all'acquisto</button>
                </div>
            </div>
        </div>
    </div>


    <div class="grid grid-cols-1">
        <main role="main">

            <partial name="_Notification" />
            @RenderBody()


        </main>
    </div>
    <footer class="bg-gray-800 text-white" style="background-image: url('/assets/images/banner/footer.jpg'); background-size: cover; background-position: center;">
        <div class="container mx-auto py-4 px-4">

            <div class="flex flex-wrap justify-between items-center">

                <div class="w-full sm:w-1/3 mb-4 sm:mb-0">

                    <h2 class="text-xl font-bold">EPICOCK</h2>
                    <p class="text-gray-400 mt-1">Il miglior posto per i tuoi acquisti</p>
                </div>

                <div class="w-full sm:w-1/3 mb-4 sm:mb-0">

                    <h3 class="text-lg font-semibold">Link Rapidi</h3>
                    <ul class="mt-2 space-y-1">

                        <li><a href="#" class="text-white">Home</a></li>
                        <li><a href="#" class="text-white">Chi Siamo</a></li>
                        <li><a href="#" class="text-white">Servizi</a></li>
                        <li><a href="#" class="text-white">Contatti</a></li>
                    </ul>
                </div>
                <!-- Contatti -->
                <div class="w-full sm:w-1/3">
                    <h3 class="text-lg font-semibold">Contattaci</h3>
                    <p class="text-gray-400 mt-2">119 Via Scampia, Napoli, Vele</p>
                    <p class="text-gray-400">Email: EPI@EPICOCKCOMMERC.com</p>
                    <p class="text-gray-400">Telefono: +39 3386574882</p>
                </div>
            </div>
            <div class="mt-4 border-t border-gray-700 pt-2 text-center text-gray-400">

                &copy; 2024 EPICOCK. Tutti i diritti riservati.
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cartIcon = document.querySelector(".fa-shopping-cart");
            const cartModal = document.getElementById("cartModal");
            const closeCart = document.getElementById("closeCart");

            cartIcon.addEventListener("click", function () {
                cartModal.classList.add("active");
            });

            closeCart.addEventListener("click", function () {
                cartModal.classList.remove("active");
            });

            cartModal.addEventListener("click", function (event) {
                if (event.target === cartModal) {
                    cartModal.classList.remove("active");
                }
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Mostra la modale promozionale
            const promoModal = document.getElementById("promoModal");
            const closePromo = document.getElementById("closePromo");

            // Funzione per mostrare la modale
            function showPromoModal() {
                promoModal.classList.add("active");
            }

            // Mostra la modale al caricamento della pagina
            showPromoModal();

            // Chiudi la modale quando l'utente clicca sul pulsante di chiusura
            closePromo.addEventListener("click", function () {
                promoModal.classList.remove("active");
            });

            // Chiudi la modale quando l'utente clicca fuori dalla modale
            promoModal.addEventListener("click", function (event) {
                if (event.target === promoModal) {
                    promoModal.classList.remove("active");
                }
            });
        });
    </script>



</body>
</html>
